{
  "include": ["**/*.ts"],
  "exclude": ["__tests__", "node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "skipLibCheck": true,
    "composite": true,

    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist"
  }
}
